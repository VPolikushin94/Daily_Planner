<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderTvStyle">
        <item name="android:layout_marginStart">@dimen/size_16</item>
        <item name="android:layout_marginTop">@dimen/size_18</item>
        <item name="android:fontFamily">"@font/ys_display_medium"</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="NoteNameTvStyle">
        <item name="android:fontFamily">"@font/ys_display_medium"</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="TimeTableTvStyle">
        <item name="android:fontFamily">"@font/ys_text_regular"</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_8</item>
    </style>

    <style name="DetailsTvStyle">
        <item name="android:fontFamily">"@font/ys_text_regular"</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="ImageBackButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_arrow_previous</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:padding">16dp</item>
    </style>

   <style name="BtnPickerStyle" parent="Widget.Material3.Button">
       <item name="android:insetTop">0dp</item>
       <item name="android:insetBottom">0dp</item>
       <item name="android:textColor">@color/white</item>
       <item name="android:backgroundTint">@color/blue</item>
   </style>

    <style name="DatePickerStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog.Picker.Date.Spinner">
        <item name="android:windowBackground">?attr/colorSecondary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AppTheme.Alert.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AppTheme.Alert.Button.Negative</item>
    </style>

    <style name="AppTheme.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AppTheme.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>